{
	"manifest_version":2,
	"name":"URL QR",
	"description":"Make QR from URL",
	"homepage_url":"https://github.com/danipragustia/url-qr",
	"version":"1.0",

	"browser_specific_settings": {
		"gecko": {
			"id": "url-qr@0x4.me"
		}
	},

	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	
	"icons": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png",
		"48": "img/icon_48.png",
		"64": "img/icon_64.png",
		"128": "img/icon_128.png"
	},

	"browser_action": {
		"default_icon": "img/icon-32.png",
		"default_title": "URL QR",
		"default_popup": "popup.html"
	},

	"permissions": [
		"contextMenus",
		"tabs"
	]
}
